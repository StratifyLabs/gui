    "$sizeButtonPaddingYMedium": "$sizeButtonPaddingY",
    "$sizeButtonPaddingYLarge": "$sizeButtonPaddingY *3/2",

    "$sizeBadgePaddingXSmall": "$sizeBadgePaddingX /2",
